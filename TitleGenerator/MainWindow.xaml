<Window x:Class="TitleGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TitleGenerator"
        mc:Ignorable="d"
        Title="Titel Generator" Height="800" Width="1200">
    <Grid Margin="0,101,-0.4,0.4">
        <StackPanel Height="97" Margin="0,-100,0,0" VerticalAlignment="Top" Orientation="Horizontal">
            <Button Height="23" Width="50" Content="Left" Click="Button_Click" />
            <Button Height="23" Width="50" Content="Up" Margin="0, -50, 0, 0" />
            <Button Height="23" Width="50" Content="Down" Margin="-50, 50, 0, 0" />
            <Button Height="23" Width="50" Content="Right" />
            <TextBox Name="TB_Text" Height="23" Width="150" TextWrapping="Wrap" Text="Insert Text" Margin="100, 0, 0, 0" TextChanged="TB_Text_TextChanged" />
            <TextBox Name="TB_FontSize" Height="23" Width="75" TextWrapping="Wrap" Text="15" Margin="10, 0, 0, 0" TextChanged="TB_FontSize_TextChanged" />
            <Button Height="23" Width="100" Content="Invert Colors" Margin="100, 0, 0, 0" />
            <Button Height="40" Width="75" Content="Generate" Background="LightGreen" Click="Button_Generate" Margin="425, 0, 0, 0" />
        </StackPanel>
        <Image Name="IMG_Preview" HorizontalAlignment="Left" Height="669" Margin="0,0,0,0" VerticalAlignment="Top" Width="1194" />
    </Grid>
</Window>